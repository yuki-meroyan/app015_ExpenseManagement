.form__contents
  .col-lg-4.col-md-6.ml-auto.mr-auto
    .form__content
      .form__head
        %h2.text-center ユーザー情報編集
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, id: "form__content") do |f|
        .form__box
          .form__text
            = devise_error_messages!
        .form__box
          = f.email_field :email, autofocus: false, placeholder: 'Gmail'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            = t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email)
        .form__box
          = f.text_field :family_name, autofocus: false, placeholder: '氏'
        .form__box
          = f.text_field :first_name, autofocus: false, placeholder: '名'
        .form__box
          = f.text_field :nick_name, autofocus: false, placeholder: 'ニックネーム'
        .form__box
          .form__text
            - if @minimum_password_length
              %em
                = t('devise.shared.minimum_password_length', count: @minimum_password_length)
            %i
              (#{t('.leave_blank_if_you_don_t_want_to_change_it')})
          = f.password_field :password, autocomplete: "off", placeholder: 'New PassWord'
        .form__box
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'New PassWord(one more)'
        .form__box
          %i
            (#{t('.we_need_your_current_password_to_confirm_your_changes')})
          = f.password_field :current_password, autocomplete: "off", placeholder: 'Enter current password if not change password '
        .form__box
          = f.submit t('.update'), class: "form__button"
      .form__footer
        = link_to registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete do
          %h2.form__text
            = t('.cancel_my_account')

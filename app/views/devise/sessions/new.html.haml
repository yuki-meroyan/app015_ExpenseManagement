.form__contents
  .col-lg-4.col-md-6.ml-auto.mr-auto
    .form__content
      .form__head
        %h2.text-center ログイン画面
      = form_for(resource, as: resource_name, url: session_path(resource_name), id: "form__content") do |f|
        .form__box
          .form__text
            = devise_error_messages!
        .form__box
          = f.email_field :email, autofocus: true, placeholder: 'Gmail Address'
        .form__box
          .form__text
            - if @minimum_password_length
              %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
          = f.password_field :password, autocomplete: "off", placeholder: 'PassWord'
        - if devise_mapping.rememberable?
          .form__box
            = f.check_box :remember_me, class: "form__check"
            = f.label :remember_me, class: "form__label"
        .form__box
          = f.submit t('.sign_in'), class: "form__button"
      .form__footer
        = link_to new_user_registration_path do
          %h2.form__text アカウント登録へ
      .form__footer
        = link_to new_user_password_path do
          %h2.form__text パスワードを忘れた場合
